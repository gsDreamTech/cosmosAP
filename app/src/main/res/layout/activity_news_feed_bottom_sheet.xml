<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorPrimary"
            android:fontFamily="serif-monospace"
            android:text="Title"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />



    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageViewBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/notific" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1">

                <AutoCompleteTextView
                    android:id="@+id/editTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Title"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="22sp"
                    android:textColor="@drawable/edit_text_seleector"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1">

                <AutoCompleteTextView
                    android:id="@+id/editTextOneLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="One line description"
                    android:inputType="textMultiLine|textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="22sp"
                    android:textColor="@drawable/edit_text_seleector"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1">

                <AutoCompleteTextView
                    android:id="@+id/editTextDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Detail Description"
                    android:inputType="textMultiLine|textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="22sp"
                    android:textColor="@drawable/edit_text_seleector"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1">

                <AutoCompleteTextView
                    android:id="@+id/editTextLinks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Links"
                    android:inputType="textMultiLine|textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="22sp"
                    android:textColor="@drawable/edit_text_seleector"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>